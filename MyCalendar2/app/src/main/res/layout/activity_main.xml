<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/main_tv_month"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="06"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="30dp"
        android:layout_marginStart="25dp"/>

    <TextView
        android:id="@+id/main_tv_year"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2021"
        android:textSize="20dp"
        android:textColor="@color/black"
        app:layout_constraintLeft_toRightOf="@id/main_tv_month"
        app:layout_constraintTop_toTopOf="@id/main_tv_month"
        app:layout_constraintBottom_toBottomOf="@id/main_tv_month"
        android:layout_marginLeft="10dp"/>

    <ImageButton
        android:id="@+id/main_btn_next"
        android:layout_width="50dp"
        android:layout_height="0dp"
        android:src="@drawable/next"
        app:layout_constraintTop_toTopOf="@id/main_tv_month"
        app:layout_constraintBottom_toBottomOf="@id/main_tv_month"
        android:background="@null"
        android:scaleType="fitCenter"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="25dp"/>

    <ImageButton
        android:id="@+id/main_btn_previous"
        android:layout_width="50dp"
        android:layout_height="0dp"
        android:src="@drawable/back"
        app:layout_constraintTop_toTopOf="@id/main_btn_next"
        app:layout_constraintBottom_toBottomOf="@id/main_btn_next"
        android:background="@null"
        android:scaleType="fitCenter"
        app:layout_constraintRight_toLeftOf="@id/main_btn_next"
        android:layout_marginRight="10dp"/>

    <TableLayout
        android:id="@+id/main_layout_calendar"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/main_tv_month"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="5dp"
        android:layout_marginHorizontal="10dp"
        android:stretchColumns="*">
        <LinearLayout
            android:id="@+id/gl_day_of_the_week"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="Sun"
                android:textColor="#FF0000"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="Mon"
                android:textColor="#222222"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="Tue"
                android:textColor="#222222"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="Wed"
                android:textColor="#222222"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="Thu"
                android:textColor="#222222"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="Fri"
                android:textColor="#222222"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="Sat"
                android:textColor="#0054FF"
                />
        </LinearLayout>
    </TableLayout>
</androidx.constraintlayout.widget.ConstraintLayout>